{
  "name": "src_electron",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "electron/main.ts",
  "author": "Finflow Solutions",
  "description": "FFCryptoCloud client",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.27",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "i18next": "^21.6.16",
    "i18next-electron-fs-backend": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.6.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "app-start": "concurrently -k \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "react-start": "dotenv -e .env.dev react-scripts start",
    "react-build-dev": "dotenv -e .env.dev react-scripts build",
    "react-build-prod": "dotenv -e .env.prod react-scripts build",
    "electron-build": "electron-builder",
    "test": "mocha",
    "build-mac-dev": "yarn react-build-dev && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "build-mac-prod": "yarn react-build-prod && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "build-win-dev": "yarn react-build-dev && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "build-win-prod": "yarn react-build-prod && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "build-linux-dev": "yarn react-build-dev && electron-builder -l -c.extraMetadata.main=build/electron.js",
    "build-linux-prod": "yarn react-build-prod && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "concurrently": "^7.1.0",
    "dotenv-cli": "^5.1.0",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "electronmon": "^2.0.2",
    "wait-on": "^6.0.1",
    "yarn": "^1.22.18"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "src_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "appId": "com.electron.ff-crypto",
    "productName": "FFCrypto",
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
