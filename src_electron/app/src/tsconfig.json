{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "app/src",
    "jsx": "react-jsx",
    "types": [
      "app/src/typings",
    ]
  },
  "include": ["app/src", ".eslintrc.json"],
  "exclude": ["node_modules", "dist", "out", ".webpack", "webpack.*"]
}